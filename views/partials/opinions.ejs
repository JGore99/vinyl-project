<% album?.opinions.forEach(opinion => { %>
  <form class="opinion-form" action="/albums/<%= album.id %>/opinions/<%= opinion._id %>?_method=DELETE" method="POST">
  <div class="photo-delete-button">
    <a href="/profiles/<%= opinion.author._id %>">
      <img class="opinion-photo" src="<%= opinion.author.avatar %>" alt="user photo">
    </a>
    <button class="delete-opinion">DELETE</button>
  </div>
  <p class="opinion-content"> <%= opinion.content %>  </p>
  </form>
  <% }) %>