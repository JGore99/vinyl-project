<%- include('../partials/html-head') %>
<%- include('../partials/nav') %>

<main>
  <section class="bio-details">
    <h1>User Details</h1>
    <img
        class="image-rounded" 
        src="<%= profile.avatar %>" 
        alt="<%= profile.name %>'s avatar"
      >

      <tr>
        <td><%= profile.name %></td>
        <td>Google Email:</td>
        <td><%= user.email %></td>
      </tr>

      <% if(!profile._id.equals(userProfile._id) && !userProfile.friends?.includes(profile._id)) { %> 
        <form action="/profiles/<%= profile._id %>/friend?_method=PATCH" method="POST">
          <button type="submit">Add Friend</button>
        </form>
      <% } %> 
      <% if (!profile._id.equals(userProfile._id) && userProfile.friends?.includes(profile._id)) { %> 
        <form action="/profiles/<%= profile._id %>/unfriend?_method=PATCH" method="POST">
          <button type="submit">Remove Friend</button>
        </form>
      <% } %> 
  </section>
  <section>
    <% albums.forEach(album =>{ %>
      <h2><%= album.artist %></h2>
    <h3><%= album.title %></h3>
    <img width="40%" src="<%= album.imageUrl %>" alt="cover art">
    <a href="/albums/<%= album.discogsId %> ">Album Info</a>
    <% }) %> 
  </section>

</main>

<%- include('../partials/footer') %>

